          "name": "Create or Look Up User",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const statusCode = pm.response.code;",
                  "",
                  "pm.test(\"Status code is 200 or 201\", function () {",
                  "    pm.expect(statusCode).to.be.oneOf([200, 201]);",
                  "});",
                  "",
                  "pm.test(\"Response has Content-Type: application/json\", function () {",
                  "    pm.response.to.have.header(\"Content-Type\");",
                  "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"application/json\");",
                  "});",
                  "",
                  "pm.test(\"Response body contains user object\", function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json).to.have.property(\"user\");",
                  "    pm.expect(json.user).to.have.property(\"id\");",
                  "    pm.expect(json.user).to.have.property(\"name\");",
                  "    pm.expect(json.user).to.have.property(\"email\");",
                  "});",
                  "",
                  "pm.test(\"User id is a non-empty string\", function () {",
                  "    const json = pm.response.json();",
                  "    pm.expect(json.user.id).to.be.a(\"string\").and.not.empty;",
                  "});",
                  "",
                  "// Store the user id for use in subsequent requests",
                  "if (pm.response.code === 200 || pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set(\"userId\", json.user.id);",
                  "}"
                ]
              }
            }
